    "N = int(input())\n",
    "h = list(map(int,input().split()))\n",
    "\n",
    "dp = [0]*N\n",
    "dp[0] = h[0]\n",
    "cnt = 0\n",
    "\n",
    "for i in range(1, N-1):\n",
    "    dp[i] = min(abs(h[i]-dp[i-1]), abs(h[i+1]-dp[i-1]))\n",
    "    cnt += dp[i]\n",
    "    \n",
    "print(cnt)"
   ]
